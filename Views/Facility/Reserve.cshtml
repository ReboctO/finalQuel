@model CreateReservationViewModel
@{
    ViewData["Title"] = "Reserve Facility";
    var today = DateTime.Today;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Facilities</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.FacilityId">@Model.FacilityName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Reserve</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 text-gray-800">Reserve @Model.FacilityName</h1>
            <p class="mb-0">Complete the form below to submit your reservation request.</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a asp-action="Details" asp-route-id="@Model.FacilityId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Details
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Reservation Form</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Reserve" method="post">
                        <input type="hidden" asp-for="FacilityId" />
                        <input type="hidden" asp-for="FacilityName" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ReservationDate" class="form-label"></label>
                                    <input asp-for="ReservationDate" class="form-control" type="date" min="@today.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="ReservationDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="StartTime" class="form-label"></label>
                                    <select asp-for="StartTime" class="form-select">
                                        @foreach (var slot in Model.AvailableTimeSlots.Where(s => s.IsAvailable))
                                        {
                                            <option value="@slot.StartTime">@slot.StartTime</option>
                                        }
                                    </select>
                                    <span asp-validation-for="StartTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="EndTime" class="form-label"></label>
                                    <select asp-for="EndTime" class="form-select">
                                        @foreach (var slot in Model.AvailableTimeSlots.Where(s => s.IsAvailable))
                                        {
                                            <option value="@slot.EndTime">@slot.EndTime</option>
                                        }
                                    </select>
                                    <span asp-validation-for="EndTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Purpose" class="form-label"></label>
                                    <input asp-for="Purpose" class="form-control" placeholder="e.g., Birthday Party, Meeting, etc." />
                                    <span asp-validation-for="Purpose" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ExpectedAttendees" class="form-label"></label>
                                    <input asp-for="ExpectedAttendees" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="ExpectedAttendees" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Notes" class="form-label"></label>
                                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any additional information or special requests..."></textarea>
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Your reservation request will be reviewed by the administrator. You will be notified once it's approved or rejected.
                        </div>
                        
                        <div class="text-end">
                            <a asp-action="Details" asp-route-id="@Model.FacilityId" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit Reservation</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Available Time Slots</h5>
                </div>
                <div class="card-body">
                    <p>Selected date: <strong>@Model.ReservationDate.ToString("MMMM dd, yyyy")</strong></p>
                    
                    @if (Model.AvailableTimeSlots != null && Model.AvailableTimeSlots.Any())
                    {
                        <div class="list-group">
                            @foreach (var slot in Model.AvailableTimeSlots)
                            {
                                <div class="list-group-item @(!slot.IsAvailable ? "list-group-item-danger" : "")">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>@slot.StartTime - @slot.EndTime</span>
                                        @if (slot.IsAvailable)
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Booked</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            No available time slots for the selected date.
                        </div>
                    }
                    
                    <div class="mt-3">
                        <a asp-action="Reserve" asp-route-id="@Model.FacilityId" asp-route-date="@Model.ReservationDate.AddDays(-1).ToString("yyyy-MM-dd")" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-arrow-left"></i> Previous Day
                        </a>
                        <a asp-action="Reserve" asp-route-id="@Model.FacilityId" asp-route-date="@Model.ReservationDate.AddDays(1).ToString("yyyy-MM-dd")" class="btn btn-sm btn-outline-primary float-end">
                            Next Day <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Validate that end time is after start time
            $('form').submit(function(e) {
                var startTime = $('#StartTime').val();
                var endTime = $('#EndTime').val();
                
                if (startTime >= endTime) {
                    alert('End time must be after start time');
                    e.preventDefault();
                }
            });
        });
    </script>
} 