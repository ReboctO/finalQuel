@model TheQuel.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">Admin Dashboard</h1>
            <p class="lead">Welcome to the administrative control panel.</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mt-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Users</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Homeowners</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalHomeowners</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-house fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Properties</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalProperties</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Available Properties</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AvailableProperties</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-house-door fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Access Menu -->
    <div class="row mt-2">
        <div class="col-md-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-primary">
                    <h6 class="m-0 font-weight-bold text-white">Quick Access</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center mb-4">
                            <a asp-controller="Admin" asp-action="UserManagement" class="btn btn-outline-primary btn-lg d-block">
                                <i class="bi bi-people-fill"></i><br>User Management
                            </a>
                        </div>
                        <div class="col-md-3 text-center mb-4">
                            <a asp-controller="Admin" asp-action="Announcements" class="btn btn-outline-primary btn-lg d-block">
                                <i class="bi bi-megaphone"></i><br>Announcements
                            </a>
                        </div>
                        <div class="col-md-3 text-center mb-4">
                            <a asp-controller="Admin" asp-action="BillingDashboard" class="btn btn-outline-primary btn-lg d-block">
                                <i class="bi bi-cash-coin"></i><br>Billing
                            </a>
                        </div>
                        <div class="col-md-3 text-center mb-4">
                            <a asp-controller="Admin" asp-action="ServiceRequests" class="btn btn-outline-primary btn-lg d-block">
                                <i class="bi bi-tools"></i><br>Service Requests
                            </a>
                        </div>
                        <div class="col-md-3 text-center mb-4">
                            <a asp-controller="Admin" asp-action="FacilityReservations" class="btn btn-outline-primary btn-lg d-block">
                                <i class="bi bi-calendar-check"></i><br>Facility Reservations
                            </a>
                        </div>
                        <div class="col-md-3 text-center mb-4">
                            <a asp-controller="Admin" asp-action="Documents" class="btn btn-outline-primary btn-lg d-block">
                                <i class="bi bi-file-earmark-text"></i><br>Documents
                            </a>
                        </div>
                        <div class="col-md-3 text-center mb-4">
                            <a asp-controller="Admin" asp-action="Reports" class="btn btn-outline-primary btn-lg d-block">
                                <i class="bi bi-graph-up"></i><br>Reports
                            </a>
                        </div>
                        <div class="col-md-3 text-center mb-4">
                            <a asp-controller="Admin" asp-action="Settings" class="btn btn-outline-primary btn-lg d-block">
                                <i class="bi bi-gear"></i><br>Settings
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Activity and Alerts -->
    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-primary">
                    <h6 class="m-0 font-weight-bold text-white">Recent Activity</h6>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            New user registered
                            <span class="badge bg-primary rounded-pill">Now</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Payment received from John Doe
                            <span class="badge bg-primary rounded-pill">1h ago</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Property #A102 sold
                            <span class="badge bg-primary rounded-pill">3h ago</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Facility reservation approved
                            <span class="badge bg-primary rounded-pill">5h ago</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Service request completed
                            <span class="badge bg-primary rounded-pill">Yesterday</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-primary">
                    <h6 class="m-0 font-weight-bold text-white">Alerts & Notifications</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> 5 payments are overdue
                        <a href="#" class="alert-link float-end">View <i class="bi bi-arrow-right"></i></a>
                    </div>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 3 new service requests require attention
                        <a href="#" class="alert-link float-end">View <i class="bi bi-arrow-right"></i></a>
                    </div>
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle"></i> Monthly backups completed successfully
                    </div>
                    <div class="alert alert-primary">
                        <i class="bi bi-bell"></i> Community meeting scheduled for tomorrow
                        <a href="#" class="alert-link float-end">View <i class="bi bi-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize any dashboard charts or functionality here
            console.log("Dashboard loaded successfully!");
        });
    </script>
} 