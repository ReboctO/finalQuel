@model BillGenerationViewModel
@{
    ViewData["Title"] = "Generate Bills";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="h3 mb-0 text-gray-800">Generate Bills</h1>
            <p class="mb-0">Generate new bills for homeowners.</p>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-action="BillingDashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Billing Dashboard
            </a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary">
            <h6 class="m-0 font-weight-bold text-white">Bill Details</h6>
        </div>
        <div class="card-body">
            <form asp-action="GenerateBills" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BillType" class="form-label">Bill Type</label>
                            <select asp-for="BillType" class="form-select" required>
                                <option value="">Select Bill Type</option>
                                @foreach (var type in Enum.GetValues(typeof(PaymentType)))
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                            <span asp-validation-for="BillType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Amount" class="form-label">Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="1" required />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DueDate" class="form-label">Due Date</label>
                            <input asp-for="DueDate" class="form-control" type="date" required />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="GenerateForAllHomeowners" class="form-label">Generate For</label>
                            <div class="form-check">
                                <input asp-for="GenerateForAllHomeowners" class="form-check-input" type="checkbox" checked />
                                <label asp-for="GenerateForAllHomeowners" class="form-check-label">
                                    Generate for all homeowners
                                </label>
                            </div>
                            <small class="form-text text-muted">
                                If checked, bills will be generated for all homeowners. Otherwise, 
                                you'll need to select specific homeowners.
                            </small>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <div class="form-group">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="alert alert-info">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    Bills will be automatically created for each homeowner with their property information.
                    Each bill will be marked as "Pending" and due on the specified date.
                </div>
                
                <div class="text-end">
                    <a asp-action="BillingDashboard" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Generate Bills
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 