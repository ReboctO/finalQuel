@model TheQuel.Models.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to The-Quel</h1>
    <p>A modern subdivision management system.</p>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Properties</h5>
                <p class="card-text">Total: @Model.TotalProperties</p>
                <p class="card-text">Available: @Model.AvailableProperties</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Community</h5>
                <p class="card-text">Homeowners: @Model.TotalHomeowners</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Administration</h5>
                <p class="card-text">Access the administrative portal for property management.</p>
                <a asp-controller="AdminAccount" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-shield-lock"></i> Admin Portal
                </a>
            </div>
        </div>
    </div>
</div>
